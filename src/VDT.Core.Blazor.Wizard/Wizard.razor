<CascadingValue Value="this">
    @if (IsActive) {
        @Steps

        @if (Layout == null) {
            <div class="@ContainerClass">
                <div class="@TitleContainerClass">
                    @this.layout.Title()
                </div>

                <div class="@StepTitleContainerClass">
                    @this.layout.StepTitles()
                </div>

                <div class="@ButtonContainerClass">
                    @this.layout.Buttons()
                </div>

                <div class="@ContentContainerClass">
                    @this.layout.Content()
                </div>
            </div>
        }
        else {
            @Layout(this.layout)
        }
    }
</CascadingValue>
